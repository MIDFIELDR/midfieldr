citHeader("To cite midfieldr in publications use:")

citEntry(entry = "manual",
  title        = "{{midfieldr: Tools for Student Records Research}}",
  author       = personList(as.person("Richard Layton"),
                   as.person("Russell Long"), as.person("Susan Lord"),
                   as.person("Matthew Ohland"), as.person("Marisa Orr")),
  year         = "2021",
  url          = "https://midfieldr.github.io/midfieldr/",

  textVersion  =
  paste("Richard Layton, Russell Long, Susan Lord, Mattthew Ohland,",
        "and Marisa Orr (2021)",
        "midfieldr: Tools for Student Records Research,",
        "URL https://midfieldr.github.io/midfieldr/.")
)
